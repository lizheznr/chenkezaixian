
/* 头部 */
.header{
    background-color: #000; /*background-image: url(img/bj.png); */
    width: 100%;
}
.header .title{
    color: #fff;
    padding-top: 20rpx;
    margin-left: 30rpx;
    font-size: 35rpx;
    margin-bottom: 30rpx;
}
.header .message image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-left:100rpx;
    margin-bottom: 80rpx;
    float: left;
}
.header .message .txt{
    float: left;
    margin-top: 10rpx;
    margin-left: 50rpx;
    color: #fff;
}
.name,
.sex,
.number{
    margin-top: 15rpx;
}


/* 列表 */
.list .list-item{
    width: 100%;
    height: 100rpx;
    border-top: 5px solid #eee;
}
.list .list-item image{
    width: 75rpx;
    height: 75rpx;
    float: left;
    margin-left: 20rpx;
    margin-top: 10rpx;
}
.list .list-item .txt{
    float: left;
    margin-left: 50rpx;
    margin-top: 25rpx;
    font-size: 30rpx;
    font-weight: bold;
}





/* 公共样式 */
.clearfix::after{
    clear: both;
    content: "";
    display: block;
}