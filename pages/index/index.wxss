/* 公共样式 */
.clearfix::after {
    clear: both;
    content: "";
    display: block;
}

.head {
    width: 600rpx;
    height: 60rpx;
    background-color: #eee;
    text-align: center;
    border-radius: 15px;
    margin: 0 auto;
    margin-top: 10rpx;
}

/* 通道 */
.pass {
    width: 600rpx;
    margin: 0 auto;
    margin-top: 10rpx;
}

.pass .banner {
    float: left;
    font-size: 20rpx;
    margin-left: 20rpx;
    width: 120rpx;
    height: 160rpx;
    text-align: center;

}



.pass .banner .photo {
    width: 100rpx;
    height: 100rpx;
    margin-top: 20rpx;
    margin-left: 10rpx;
    margin-bottom: -20rpx;
    border-radius: 50%;
}

.pass .banner image {
    width: 60rpx;
    height: 60rpx;
    margin: 10rpx 10rpx;
}

/* 分享 */
.myShare {
    width: 600rpx;
    margin: 0 auto;
    overflow: hidden;
}

.myShare .title {
    text-align: center;
    text-decoration: underline;
    color: #333;
    font-size: 28rpx;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}

.myShare .banner {
    width: 270rpx;
    height: 250rpx;
    margin: 0 15rpx;
    margin-top: 15rpx;
    float: left;
}

.myShare .banner image {
    width: 270rpx;
    height: 140rpx;
}

.myShare .banner .con {
    font-size: 24rpx;
    color: #999;
}

.myShare .banner .time {
    font-size: 24rpx;
    color: #999;
    text-align: right;
}